<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.tp1.Partie2Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone">
            <TextView
                android:id="@+id/txt_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txt_iteration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txt_estimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_time_encryption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>
        <LinearLayout
            android:id="@+id/linear_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:background="@color/white"
                app:boxStrokeWidth="0dp"
                app:boxStrokeColor="@color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enter_password"
                    android:inputType="text"
                    android:background="@drawable/edt_design"
                    android:textColor="@color/black">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="180dp"
                android:layout_marginHorizontal="100dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/authentication_button_shape">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_send_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/Send"
                        android:textSize="17sp"
                        android:visibility="visible"
                        android:background="@drawable/authentication_button_shape"
                        android:textAllCaps="false"/>
                    <ProgressBar
                        android:id="@+id/progress_send_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomProgressBarStyle"
                        android:visibility="gone"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>