<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/container_message_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="10dp"
        android:padding="1dp">
        <TextView
            android:id="@+id/txt_date_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/relative_message_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_container_receiver"
            android:padding="12dp"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/txt_date_receiver"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/txt_message_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello nadir"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_message_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_message_receiver"
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="10dp"
        android:padding="1dp">
        <TextView
            android:id="@+id/txt_date_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/relative_message_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txt_date_sender"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/message_container_sender"
            android:padding="12dp">
            <TextView
                android:id="@+id/txt_message_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="hello nadir"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>