<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
    </style>
    <style name="CustomProgressBarStyleBlack" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/black</item>
    </style>
    <style name="CustomProgressBarStyleTp3" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/black</item>
    </style>
    <style name="CustomProgressBarStyleBlackTp3" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/yellow</item>
    </style>
</resources>